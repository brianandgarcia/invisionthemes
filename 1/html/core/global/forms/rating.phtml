<ips:template parameters="$name, $value, $required, $max=5" />
<input type='hidden' name='{$name}' value="0">
<div data-ipsRating data-ipsRating-changeRate='true' data-ipsRating-size='veryLarge'>
	{{foreach range( 1, $max ) as $i}}
		<input type='radio' name='{$name}' id='{$name}_{$i}' value='{$i}' {{if $i == $value}}checked{{endif}}> <label for='{$name}_{$i}'>{$i}</label>
	{{endforeach}}
</div>